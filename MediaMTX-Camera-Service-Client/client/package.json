{
  "name": "mediamtx-camera-client",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run arch:check && vite",
    "build": "npm run arch:check && npm run type:check && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:unit": "npx jest --config tests/config/jest-unit.config.cjs",
    "test:integration": "npx jest --config tests/integration/jest.config.cjs",
    "test:e2e": "npx jest --config tests/config/jest-e2e.config.cjs",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:integration:coverage": "npm run test:integration -- --coverage",
    "test:coverage": "npm run test:unit:coverage && npm run test:integration:coverage",
    
    "arch:check": "bash ./architecture-check.sh",
    "arch:lint": "eslint . --config .eslintrc.architecture.js",
    "arch:fix": "node ./scripts/fix-architecture.js",
    
    "type:check": "tsc --noEmit",
    "type:strict": "tsc --noEmit --project tsconfig.strict.json",
    
    "fix:services": "node ./scripts/fix-services-to-apiclient.js",
    "fix:imports": "node ./scripts/fix-import-violations.js",
    
    "test:arch": "jest --testMatch='**/*.arch.test.ts'",
    
    "precommit": "npm run arch:check && npm run type:strict && npm run arch:lint",
    "prepush": "npm run test:arch",
    
    "clean:legacy": "node ./scripts/remove-legacy-code.js",
    
    "report:arch": "madge --circular src/",
    "report:deps": "madge --depends src/components/ src/",
    "report:orphans": "madge --orphans src/"
  },
  "dependencies": {
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/system": "^7.3.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^6.18.0",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jsonwebtoken": "^9.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "ws": "^8.18.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "madge": {
    "detectiveOptions": {
      "ts": {
        "skipAsyncImports": true
      }
    },
    "fileExtensions": ["ts", "tsx"],
    "excludeRegExp": [".*\\.test\\..*", ".*\\.spec\\..*"]
  }
}
